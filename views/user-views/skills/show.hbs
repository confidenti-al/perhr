<div class="inside">
  <div class="row">
    {{> card}}
    <div class="col s12 m12 l5" id="right">
      <div class="mini-nav center">
        <a href="/profile/{{user._id}}"><button class="btn-small black">Profile</button></a>
        <a href="/profile/{{user._id}}/portfolio/"><button class="btn-small black">Portfolio</button></a> 
        <a href="/profile/{{user._id}}/skills/edit"><button class="btn-small blue darken-3">Edit Skills</button></a>
        <a href="/profile/{{user._id}}/rate"><button class="btn-small black">$ Rate</button></a>
      </div>
      <h3>Skills</h3>
      
      {{#each user.skills}}
      <div class="chip black white-text" id="chip-edit"><img src="{{this.icon}}" alt="{{this.name}}">{{this.name}}</div>
      {{/each}}
      
    </div>
  </div>
</div>