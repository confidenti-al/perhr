<div class="inside">
  <div class="row">
    <div class="col s12 m12 l8 center" id="left">
      <h1>{{user.fullName}}</h1>
      <h2>{{user.title}}</h2>
      <h3>{{user.location}}</h3>
      <h4>{{user.email}}</h4>
    </div>
    <div class="col s12 m12 l4" id="right">
      <div class="mini-nav center"><button class="btn-small blue">Profile</button> <button class="btn-small black">Portfolio</button> <button class="btn-small black">Skills</button></div>
      <h3>Profile</h3>
      <form action="/card" method="POST">
      <div class="input-field"><label>Name</label>
      <input type="text" name="fullName" value="{{user.fullName}}"></div>
      <div class="input-field"><label>Title</label>
      <input type="text" name="title"></div>
      <div class="input-field"><label>Where</label>
      <input type="text" name="location"></div>
      <div class="input-field"><label>Email</label>
      <input type="text" name="email" value="{{user.email}}"></div>
      <div class="input-field"><label>Phone</label>
      <input type="text" name="phone"></div>
      <!-- TESTING ADDING TAG CHIPS -->
      <div class="chip white-text green">
        React.js
        <i class="close material-icons">close</i>
      </div>

      <button class="btn-large save-btn waves-effect waves-light green right">Save</button>
      </form>
    </div>
  </div>
</div>