<div class="inside">
  <div class="row">
    {{> card}}
    <div class="col s12 m12 l4" id="right">
      <div class="mini-nav center">
        <a href="/profile/{{user._id}}/edit"><button class="btn-small blue darken-3">Edit Profile</button></a>
        <button class="btn-small black">Portfolio</button> 
        <button class="btn-small black">Skills</button>
      </div>
      <h3>Profile</h3>
      <form action="/card" method="POST" disabled>
      <div class="input-field"><label>Name</label>
      <input type="text" name="fullName" value="{{user.fullName}}" readonly></div>
      <div class="input-field"><label>Title</label>
      <input type="text" name="title" value="{{user.title}}" readonly></div>
      <div class="input-field"><label>Where</label>
      <input type="text" name="location" value="{{user.location}}" readonly></div>
      <div class="input-field"><label>Email</label>
      <input type="text" name="email" value="{{user.email}}" readonly></div>
      <div class="input-field"><label>Phone</label>
      <input type="text" name="phone" value="{{user.phone}}" readonly></div>
      <div class="input-field"><label>Per Hour Rate ($)</label>
      <input type="number" name="rate" value="{{user.rate}}" readonly></div>
      <!-- TESTING ADDING TAG CHIPS -->
